@model IEnumerable<Assignment1.Models.Recipe>

@{
    ViewData["Title"] = "All Recipes";
}

<table>
    <thead>
        <tr class="alternate">
            <td><h3>Title</h3></td>
            <td><h3>Preparation time</h3></td>
            <td><h3>Cook time</h3></td>
        </tr>
    </thead>
@foreach (Assignment1.Models.Recipe recipe in Model)
{   
    <tbody>
        <tr class="@((recipe.RecipeID % 2 == 1) ? "alternate" : "")">
            <td width="60%">
                <form class="allRecipesForms" id="recipe#@recipe.RecipeID" asp-action="DisplayPage" asp-route-recipeID="@recipe.RecipeID" method="post">
                    <span onclick="(function () {document.getElementById('recipe#@recipe.RecipeID').submit(); })()">@recipe.Title</span>
                </form>
            </td>
            <td class="allRecipesTD" width="24%">@recipe.PrepTime</td>
            <td class="allRecipesTD" width="16%">@recipe.CookTime</td>
        </tr>
    </tbody>
}
</table>